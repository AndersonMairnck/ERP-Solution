@{
    ViewData["Title"] = "Ponto de Venda (PDV)";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Área de Produtos e Venda -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cash-register"></i> Ponto de Venda
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Scanner de Código -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" class="form-control" id="productCode"
                                       placeholder="Digite o código ou escaneie o produto..."
                                       autocomplete="off">
                                <button class="btn btn-outline-secondary" type="button" id="scanButton">
                                    <i class="fas fa-barcode"></i> Escanear
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-grid">
                                <button class="btn btn-success" id="finalizeSale">
                                    <i class="fas fa-check"></i> Finalizar Venda
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Itens da Venda -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="saleItemsTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Produto</th>
                                    <th>Preço Unit.</th>
                                    <th>Quantidade</th>
                                    <th>Total</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Itens serão adicionados via JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Área de Resumo e Pagamento -->
        <div class="col-md-4">
            <!-- Resumo da Venda -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-receipt"></i> Resumo da Venda</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-6">Subtotal:</div>
                        <div class="col-6 text-end" id="subtotal">R$ 0,00</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6">Desconto:</div>
                        <div class="col-6 text-end">
                            <input type="number" class="form-control form-control-sm"
                                   id="discount" value="0.00" step="0.01" min="0">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6">Total:</div>
                        <div class="col-6 text-end fw-bold" id="total">R$ 0,00</div>
                    </div>
                </div>
            </div>

            <!-- Forma de Pagamento -->
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-credit-card"></i> Pagamento</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Forma de Pagamento</label>
                        <select class="form-select" id="paymentMethod">
                            <option value="CASH">Dinheiro</option>
                            <option value="CREDIT_CARD">Cartão de Crédito</option>
                            <option value="DEBIT_CARD">Cartão de Débito</option>
                            <option value="PIX">PIX</option>
                            <option value="TRANSFER">Transferência</option>
                        </select>
                    </div>

                    <div class="mb-2" id="cashSection" style="display: none;">
                        <label class="form-label">Valor Recebido</label>
                        <input type="number" class="form-control" id="amountReceived"
                               step="0.01" min="0" value="0.00">
                        <div class="mt-1">
                            <small>Troco: <span id="changeAmount">R$ 0,00</span></small>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Cliente (opcional)</label>
                        <input type="text" class="form-control" id="clientName"
                               placeholder="Nome do cliente">
                        <input type="text" class="form-control mt-1" id="clientDocument"
                               placeholder="CPF/CNPJ (opcional)">
                    </div>
                </div>
            </div>

            <!-- Informações do Dia -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-line"></i> Hoje</h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h4 id="dailyTotal">R$ 0,00</h4>
                        <small class="text-muted">Total de vendas hoje</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Finalização -->
<div class="modal fade" id="finishSaleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Venda Finalizada</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Venda concluída com sucesso!</h4>
                <p>Código da venda: <strong id="saleCodeResult"></strong></p>
                <p>Total: <strong id="saleTotalResult"></strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="printReceipt">
                    <i class="fas fa-print"></i> Imprimir
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pdv.js"></script>
}