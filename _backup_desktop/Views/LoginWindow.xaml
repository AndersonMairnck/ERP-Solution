<Window x:Class="ERPCore.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERP Core - Login" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <!-- Efeito de sombra -->
        <Border Margin="10" Background="Transparent">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
        </Border>

        <Border Background="#007bff" 
                CornerRadius="10" 
                Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Logo -->
                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                    <Canvas Width="24" Height="24">
                        <Path Fill="White" Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6Z"/>
                    </Canvas>
                </Viewbox>

                <!-- Título -->
                <TextBlock Text="ERP CORE" 
                         Foreground="White" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         HorizontalAlignment="Center"
                         Margin="0,0,0,30"/>

                <!-- Formulário de Login -->
                <StackPanel Width="250">
                    <!-- Usuário -->
                    <TextBlock Text="Usuário" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                           Style="{StaticResource LoginTextBox}"
                           Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Senha -->
                    <TextBlock Text="Senha" Foreground="White" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                               Style="{StaticResource LoginPasswordBox}"
                               KeyDown="PasswordBox_KeyDown"/>

                    <!-- Lembrar-me -->
                    <CheckBox x:Name="RememberCheckBox" 
                            Content="Lembrar-me" 
                            Foreground="White" 
                            Margin="0,15,0,0"/>

                    <!-- Botão Login -->
                    <Button x:Name="LoginButton" 
                          Content="Entrar" 
                          Style="{StaticResource LoginButton}"
                          Margin="0,20,0,0"
                          Click="LoginButton_Click"/>

                    <!-- Mensagem de erro -->
                    <TextBlock x:Name="ErrorTextBlock" 
                             Foreground="#ff4444" 
                             TextWrapping="Wrap"
                             Margin="0,10,0,0"
                             Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Botão Fechar -->
        <Button x:Name="CloseButton" 
                Content="X"
            Width="30" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent" 
                Foreground="White"
                BorderBrush="Transparent"
                FontSize="14"
                FontWeight="Bold"
                Click="CloseButton_Click"
                Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>