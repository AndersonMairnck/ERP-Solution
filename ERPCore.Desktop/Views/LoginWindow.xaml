<Window x:Class="ERPCore.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERP Core - Login" 
        Height="300" 
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ERP CORE" 
                     FontSize="20" 
                     FontWeight="Bold" 
                     HorizontalAlignment="Center"
                     Margin="0,0,0,20"/>

            <Label Content="Usuário:"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>

            <Label Content="Senha:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

            <CheckBox x:Name="chkRemember" Content="Lembrar-me" Margin="0,0,0,20"/>

            <Button Content="Entrar" 
                    Click="BtnLogin_Click"
                    Height="30"
                    Background="#007bff"
                    Foreground="White"/>

            <TextBlock x:Name="txtError" 
                     Foreground="Red" 
                     Margin="0,10,0,0"
                     Visibility="Collapsed"
                     TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>