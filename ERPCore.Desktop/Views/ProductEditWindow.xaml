<Window x:Class="ERPCore.Desktop.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Produto" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" 
                 Grid.Row="0" 
                 FontSize="16" 
                 FontWeight="Bold"
                 Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <Label Content="Código:"/>
            <TextBox x:Name="txtCode" Margin="0,0,0,10"/>

            <Label Content="Nome:"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <Label Content="Descrição:"/>
            <TextBox x:Name="txtDescription" Height="60" Margin="0,0,0,10"/>

            <Label Content="Preço Varejo:"/>
            <TextBox x:Name="txtPriceRetail" Margin="0,0,0,10"/>

            <Label Content="Preço Atacado:"/>
            <TextBox x:Name="txtPriceWholesale" Margin="0,0,0,10"/>

            <Label Content="Estoque:"/>
            <TextBox x:Name="txtStockQuantity" Margin="0,0,0,10"/>

            <Label Content="Estoque Mínimo:"/>
            <TextBox x:Name="txtMinimumStock" Margin="0,0,0,10"/>

            <CheckBox x:Name="chkActive" Content="Produto Ativo" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="Salvar" Width="80" Click="BtnSave_Click" Background="#007bff" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>