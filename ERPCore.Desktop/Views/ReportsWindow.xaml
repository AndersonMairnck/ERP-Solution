<Window x:Class="ERPCore.Desktop.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relatórios" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gerador de Relatórios" 
                 FontSize="18" 
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <!-- Relatório de Vendas -->
            <GroupBox Header="Relatório de Vendas" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="De:" Width="40" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpSalesStart" Width="120" Margin="0,0,10,0"/>
                        <TextBlock Text="Até:" Width="40" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpSalesEnd" Width="120"/>
                    </StackPanel>
                    <Button Content="Gerar Relatório de Vendas" 
                            Click="BtnSalesReport_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- Relatório de Produtos -->
            <GroupBox Header="Relatório de Produtos" Margin="0,0,0,10">
                <StackPanel>
                    <Button Content="Gerar Relatório de Produtos" 
                            Click="BtnProductsReport_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- Relatório Diário -->
            <GroupBox Header="Relatório Diário" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Data:" Width="40" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpDaily" Width="120"/>
                    </StackPanel>
                    <Button Content="Gerar Relatório Diário" 
                            Click="BtnDailyReport_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- Relatório de Estoque -->
            <GroupBox Header="Relatório de Estoque">
                <StackPanel>
                    <Button Content="Gerar Relatório de Estoque" 
                            Click="BtnInventoryReport_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>